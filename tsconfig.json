{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      /*Modified paths, e.g. @projectName/.../, required modify webpack: resolve->alias*/
      "@pokemon-portal/uikit": ["../uikit/dist"],
      "@pokemon-portal/uikit/*": ["../uikit/dist/*"],
      "@pokemon-portal/config": ["src/config"],
      "@pokemon-portal/config/*": ["src/config/*"],
      "@pokemon-portal/src": ["src"],
      "@pokemon-portal/src/*": ["src/*"],
      "@pokemon-portal/assets": ["public/assets"],
      "@pokemon-portal/assets/*": ["public/assets/*"],
      "@pokemon-portal/api": ["src/api"],
      "@pokemon-portal/api/*": ["src/api/*"],
      "@pokemon-portal/components": ["src/components"],
      "@pokemon-portal/components/*": ["src/components/*"],
      "@pokemon-portal/constants": ["src/constants"],
      "@pokemon-portal/constants/*": ["src/constants/*"],
      "@pokemon-portal/fonts": ["src/fonts"],
      "@pokemon-portal/fonts/*": ["src/fonts/*"],
      "@pokemon-portal/store": ["src/store"],
      "@pokemon-portal/store/*": ["src/store/*"],
      "@pokemon-portal/style": ["src/style"],
      "@pokemon-portal/style/*": ["src/style/*"],
      "@pokemon-portal/theme": ["src/views/theme"],
      "@pokemon-portal/theme/*": ["src/views/theme/*"],
      "@pokemon-portal/utils": ["src/utils"],
      "@pokemon-portal/utils/*": ["src/utils/*"],
      "@pokemon-portal/views": ["src/views"],
      "@pokemon-portal/views/*": ["src/views/*"]
    },
    "outDir": "./tsDist",
    "target": "ES5",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "noEmit": true,
    "noUnusedLocals": true,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src", "__test__", "postcss.config.ts"],
  "exclude": ["node_modules", "dist", "public", "**/*.test.tsx", "**/*.test.ts"]
}
